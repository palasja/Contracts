@page "/ServiceInfo"

@inject IServiceInfoRepository serviceInfoService

@if (AllService == null)
{
    <p><em>Loading...</em></p>
}
else if (AllService.Count == 0)
{
    <div class="row">
        <div class="col col-3 m-3">
            <button class="btn btn-light m-3" @onclick="() => addYearCost.Show()">Добавить</button>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col col-3 m-3">
            <button class="btn btn-light m-3" @onclick="() => addYearCost.Show()">Добавить</button>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Наименование</th>
                @*                <th>Осн место\Сервер</th>
                    <th>Доп. место\Раб. место</th>*@
                <th>Описание</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var serviceInfo in AllService)
            {
                <tr>
                    <td> @serviceInfo.Id</td>
                    <td> @serviceInfo.ServiceTypeName</td>
                    @*                    <td> @serviceInfo.MainCost</td>
                        <td> @serviceInfo.AdditionalCost</td>*@
                    <td>@serviceInfo.ServiceTypeDescription</td>
                </tr>
            }
            <NewServiseCost @ref="addYearCost" Title="Добавить сотимость для года" />
        </tbody>
    </table>

}

@code {
    NewServiseCost addYearCost;
    List<ServiceInfoDTO> AllService;

    protected override async Task OnInitializedAsync()
    {
        AllService = await serviceInfoService.GetServicesInfoAsync();

    }

}
